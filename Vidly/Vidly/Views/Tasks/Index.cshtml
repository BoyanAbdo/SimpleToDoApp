@model IEnumerable<Vidly.Models.Task>

@{ ViewData["Title"] = "Tasks"; }
<br />
<h2>@ViewData["Title"]</h2>
<hr />

<div class="jumbotron">

    <div class="bs-component">
        <a class="btn btn-success btn-sm" asp-action="Create">Create New</a>
        <a class="btn btn-info btn-sm" href="/Home">Back to Home</a>
    </div>
    <p>
    </p>
    <p>
    </p>

    <table class="table table-hover">
        <thead>
            <tr class="table-active">
                <th scope="col" class="sortable asc">@Html.ActionLink("Title", "Index", new { sort = ViewBag.TitleSortParm })</th>
                <th scope="col" class="sortable">@Html.ActionLink("Description", "Index", new { sort = ViewBag.DescriptionSortParm })</th>
                <th scope="col" class="sortable">@Html.ActionLink("Date", "Index", new { sort = ViewBag.DateSortParm })</th>
                <th scope="col" class="sortable">@Html.ActionLink("Status", "Index", new { sort = ViewBag.StatusSortParm })</th>
                <th scope="col"></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <a type="button" class="btn btn-outline-dark btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a type="button" class="btn btn-outline-success btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a type="button" class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </td>
                </tr>
             }
        </tbody>
    </table>

</div>
